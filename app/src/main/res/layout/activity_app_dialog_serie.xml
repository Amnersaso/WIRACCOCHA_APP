<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.Produccion.DialogSerie.AppDialogSerie">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Formato Control"
            android:textColor="@color/colorBlanco"
            android:textSize="30dp"
            android:transitionName="title" />
    </LinearLayout>


    <Spinner
        android:id="@+id/sp_listaFormatoAppDialogSer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorHint"
        android:orientation="vertical"/>

    <Spinner
        android:id="@+id/sp_listaSubFormatoAppDialogSer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputser"
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_serieAppDialogSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Serie"
                    android:enabled="true"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">
                <EditText
                    android:id="@+id/txt_numSerieAPPDialogSer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="N serie"
                    android:enabled="true"
                    android:textColor="@color/colorsubtitulo"
                    android:textSize="15dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/sp_lineaAppDialogSer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btn_registrarSerieFormatoControl"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/margen_botton"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Registrar"
        android:textAllCaps="false"
        android:textColor="@color/colorBlanco"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBlanco"
        android:orientation="vertical" />
</LinearLayout>
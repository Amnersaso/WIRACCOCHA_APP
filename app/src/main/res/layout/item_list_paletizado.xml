<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:id="@+id/cd_paletizado"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="2dp"
        android:id="@+id/ll_paletizado"
        android:paddingEnd="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lote"
                        android:enabled="false"
                        android:textSize="13dp"
                        android:textColor="@color/colorsubtitulo"
                        android:id="@+id/txt_loteItemPaletizado"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="N Doc"
                        android:enabled="false"
                        android:textSize="13dp"
                        android:textColor="@color/colorsubtitulo"
                        android:id="@+id/txt_numdocItemPaletizado"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/10/2020"
                        android:layout_gravity="right"
                        android:textSize="12dp"
                        android:id="@+id/txt_fechaItemPaletizado"/>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Producto"
                android:enabled="false"
                android:textSize="13dp"
                android:textColor="@color/colorsubtitulo"
                android:id="@+id/txt_producItemPaletizado"/>
        </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Linea - Turno"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="@color/colorsubtitulo"
                    android:id="@+id/txt_lineTurnoItemPaletizado"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="P Ingreso"
                        android:textSize="13dp"
                        android:enabled="false"
                        android:textColor="@color/colorsubtitulo"
                        android:id="@+id/txt_pIngresoItemPaletizado"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="P Salida"
                        android:textSize="13dp"
                        android:enabled="false"
                        android:textColor="@color/colorsubtitulo"
                        android:id="@+id/txt_pSalidaItemPaletizado"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_ver"
                        android:id="@+id/btn_detalleItemPaletizado"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quinua - Blanca"
                    android:textColor="@color/colortitulo"
                    android:id="@+id/txt_tituloListaProduct"
                    android:textSize="25dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="15dp"
                    android:id="@+id/txt_IDComDetalleCompra"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="15dp"
                    android:id="@+id/txt_SerieDetalleCompra"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="700px"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Saco: "
                                android:textSize="15dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17dp"
                                android:id="@+id/txt_sacoListaProducto"
                                android:text="25"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textSize="15dp"
                                android:text="Peso: "/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3400"
                                android:textSize="17dp"
                                android:id="@+id/txt_pesolistaRedondo"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:visibility="invisible"
                                android:textSize="15dp"
                                android:text="P. Neto: "/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:visibility="invisible"
                                android:text="15tn"
                                android:id="@+id/txt_pesolistaNeto"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Precio"
                                    android:textSize="16sp"
                                    android:text="0"
                                    android:inputType="numberDecimal"
                                    android:id="@+id/txt_precioKG"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/txt_precioTotalSacos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:hint="0"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="300px"
                        android:layout_height="80dp"
                        android:background="@drawable/quinua"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lilayout_Precio"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:id="@+id/linearCondicionGAC">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <Spinner
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:tooltipText="selecciones"
                       android:id="@+id/sp_almacenLista"/>
                   <Spinner
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:tooltipText="selecciones"
                       android:id="@+id/sp_almacenUbicacion"/>
               </LinearLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content">
                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:hint="UbicaciÃ³n"
                       android:textSize="16sp"
                       android:inputType="textCapCharacters"
                       android:id="@+id/txt_ubicaci"/>
               </com.google.android.material.textfield.TextInputLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <com.google.android.material.textfield.TextInputLayout
                       android:layout_width="400px"
                       android:layout_height="wrap_content">
                       <com.google.android.material.textfield.TextInputEditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="Lote Wiraccocha"
                           android:textColor="@color/colortitulo"
                           android:textSize="16sp"
                           android:inputType="textCapCharacters"
                           android:id="@+id/txt_asp_loteWiraccocha"/>
                   </com.google.android.material.textfield.TextInputLayout>
                   <ImageButton
                       android:layout_width="60dp"
                       android:layout_height="45dp"
                       android:backgroundTint="@color/colorPrimary"
                       android:src="@drawable/ic_ver"
                       android:layout_gravity="right"
                       android:id="@+id/btn_revisar_lote"/>
                   <com.google.android.material.textfield.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <com.google.android.material.textfield.TextInputEditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="Lote Proveedor"
                           android:textColor="@color/colortitulo"
                           android:textSize="16sp"
                           android:inputType="textCapCharacters"
                           android:id="@+id/txt_asp_loteProveedor"/>
                   </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="ObservaciÃ³n"
                    android:textSize="16sp"
                    android:inputType="textCapCharacters"
                    android:id="@+id/txt_observacionPrecioProd"/>
            </com.google.android.material.textfield.TextInputLayout>
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#BFDDA1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#607837"
                    android:text="Â¿Desea Guardar los Cambios?"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/margen_boton_swich"
                    android:padding="9dp"
                    android:id="@+id/btn_togleListaProducto"
                    android:theme="@style/mySwith"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>